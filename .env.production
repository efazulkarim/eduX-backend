# Production Environment Variables
NODE_ENV=production
PORT=3000

# Database (Update with your production database URL)
DATABASE_URL="postgresql://username:password@localhost:5432/school_management_db?schema=public"

# JWT (Generate new secure secrets for production)
JWT_SECRET="your-super-secure-jwt-secret-key-here-make-it-long-and-random"
JWT_EXPIRES_IN="7d"

# Bcrypt
BCRYPT_ROUNDS=12

# CORS Configuration (Update with your actual domain)
CORS_ORIGIN="https://yourdomain.com"
FRONTEND_URL="https://yourdomain.com"

# Additional production domains (if you have multiple)
# ADMIN_URL="https://admin.yourdomain.com"
# API_URL="https://api.yourdomain.com"

# Optional: Logging and monitoring
